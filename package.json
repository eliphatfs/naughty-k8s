{
  "name": "naughty-k8s",
  "displayName": "naughty-k8s",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:nk8spodfs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "naughty-k8s.res.refresh",
        "title": "Refresh Kubernetes Resources",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "naughty-k8s.proxy.restart",
        "title": "Restart Kubernetes Backend",
        "icon": "$(debug-restart)"
      },
      {
        "command": "naughty-k8s.pod.mount",
        "title": "Mount PodFS"
      },
      {
        "command": "naughty-k8s.podfs.mount",
        "title": "Mount PodFS (Low Level)"
      },
      {
        "command": "naughty-k8s.podfs.entry.refresh",
        "title": "PodFS: Refresh Entry",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "naughty-k8s.pod.test",
        "title": "Test Pod"
      },
      {
        "command": "naughty-k8s.pod.log",
        "title": "Open Streamed Pod Log",
        "icon": "$(output-view-icon)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "naughty-k8s.res.refresh",
          "when": "view == naughty-k8s.res",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "naughty-k8s.pod.mount",
          "when": "view == naughty-k8s.res && viewItem == running"
        },
        {
          "command": "naughty-k8s.pod.test",
          "when": "view == naughty-k8s.res && viewItem == running"
        },
        {
          "command": "naughty-k8s.pod.log",
          "when": "view == naughty-k8s.res",
          "group": "inline"
        }
      ]
    },
    "views": {
      "naughty-k8s-exp": [
        {
          "type": "webview",
          "id": "naughty-k8s.cfg",
          "name": "Configuration",
          "initialSize": 2
        },
        {
          "id": "naughty-k8s.res",
          "name": "Resources"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "naughty-k8s-exp",
          "title": "naughty-k8s",
          "icon": "media/nautilus.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run production",
    "production": "NODE_ENV=production node ./esbuild.js",
    "compile": "node ./esbuild.js",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "esbuild": "0.16.17",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.18.1",
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "axios": "^1.4.0",
    "yaml": "^2.3.1"
  }
}
